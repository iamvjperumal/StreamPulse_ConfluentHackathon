{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "esModuleInterop": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}